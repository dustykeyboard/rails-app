<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<% @articles.each do |article| %>
  <article>
    <h2><%= link_to article.title, article %></h2>
    <p>By: <%= link_to article.user.name, article.user %></p>
    <%= truncate(article.body, length: 300) %>
  </article>
<% end %>

<br>

<%= link_to 'New Article', new_article_path %>
